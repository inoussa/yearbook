<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID"
	version="3.0">

  <display-name>yearbook-app</display-name>
  
  <!-- Inclusion de l'entÃªte, du menu et du pieds de page dans chaque fichier *.jsp de WEB_INF/jsp_files/. -->
  <jsp-config>
  	<jsp-property-group>
  		<description></description>
  		<url-pattern>WEB-INF/jsp_files/*.jsp</url-pattern>
  		<page-encoding>UTF-8</page-encoding>
  		<include-prelude>header.jsp</include-prelude>
  		<include-prelude>nav.jsp</include-prelude>
  		<include-coda>footer.jsp</include-coda>
  	</jsp-property-group>
  </jsp-config>

  <servlet>
    <servlet-name>yearbook</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>yearbook</servlet-name>
    <url-pattern>*.htm</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>yearbook</servlet-name>
    <url-pattern>/actions/*</url-pattern>
  </servlet-mapping> 

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
</web-app>